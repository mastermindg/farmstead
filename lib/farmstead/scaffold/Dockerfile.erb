FROM ruby:2.4.1

RUN apt-get update -qq && \
    apt-get install -y build-essential \
    libpq-dev \
    nodejs \
    telnet \
    bash \
    supervisor \
    vim \
    xterm \
    ca-certificates \
    unzip && \
    rm -rf /var/cache/apk/*

## Setup Ruby
RUN mkdir /service
WORKDIR /service
ADD Gemfile* /service/
RUN gem install bundler && bundle install --jobs 20 --retry 5
ADD . /service
RUN gem install farmstead-0.0.15.gem

COPY supervisord.conf /etc/supervisor/conf.d/supervisord.conf

CMD /usr/bin/supervisord
