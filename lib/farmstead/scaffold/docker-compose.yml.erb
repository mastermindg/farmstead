version: '3'

services:
  mysql:
    image: 'mysql:5.7'
    env_file:
      - '.env'
    ports:
      - '3306:3306'

  zookeeper:
    image: wurstmeister/zookeeper
    ports:
      - '2181:2181'

  kafka:
    depends_on:
      - 'zookeeper'
    image: wurstmeister/kafka
    ports:
      - '9092:9092'
    env_file:
      - '.env'
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock

  manage:
    depends_on:
      - 'mysql'
    build: .
    environment:
      SERVICE: manager
    ports:
      - '3000:3000'
    env_file:
      - '.env'
  
  extract:
    depends_on:
      - 'manage'
    build: .
    environment:
      SERVICE: extracter
    env_file:
      - '.env'

  transform:
    depends_on:
      - 'manage'
    build: .
    environment:
      SERVICE: transformer
    env_file:
      - '.env'

  load:
    depends_on:
      - 'manage'
    build: .
    environment:
      SERVICE: loader
    env_file:
      - '.env'
