version: '3'

services:
  mysql:
    image: 'mysql:5.7'
    env_file:
      - '.env'
    ports:
      - '3306:3306'

  zookeeper:
    image: wurstmeister/zookeeper
    ports:
      - '2181:2181'

  kafka:
    depends_on:
      - 'zookeeper'
    image: wurstmeister/kafka:0.10.2.1
    ports:
      - '9092:9092'
    env_file:
      - '.env'
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock

  dorothy:
    depends_on:
      - 'mysql'
    build:
      context: .
      dockerfile: Dockerfile-dorothy
    ports:
      - '3000:3000'
    env_file:
      - '.env'

  glenda:
    depends_on:
      - 'dorothy'
    build: .
    environment:
      SERVICE: glenda
    env_file:
      - '.env'
  
  tinman:
    depends_on:
      - 'dorothy'
    build: .
    environment:
      SERVICE: tinman
    env_file:
      - '.env'

  scarecrow:
    depends_on:
      - 'dorothy'
    build: .
    environment:
      SERVICE: scarecrow
    env_file:
      - '.env'

  cowardlylion:
    depends_on:
      - 'dorothy'
    build: .
    environment:
      SERVICE: cowardlylion
    env_file:
      - '.env'
